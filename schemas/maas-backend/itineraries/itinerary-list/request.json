{
  "$id": "http://maasglobal.com/maas-backend/itineraries/itinerary-list/request.json",
  "description": "Request schema for itinerary-list",
  "type": "object",
  "properties": {
    "identityId": {
      "$ref": "/core/components/units.json#/definitions/identityId"
    },
    "payload": {
      "type": "object",
      "properties": {
        "startTime": {
          "$ref": "/core/components/units.json#/definitions/time"
        },
        "endTime": {
          "$ref": "/core/components/units.json#/definitions/time"
        },
        "states": {
          "type": "string",
          "pattern": "^([A-Ö]+,)*[A-Ö]+$"
        },
        "bookingId": {
          "$ref": "/core/booking.json#/properties/id"
        },
        "originalFare": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "headers": {
      "$ref": "/core/components/api-common.json#/definitions/headers"
    }
  },
  "required": ["identityId"],
  "additionalProperties": false
}
