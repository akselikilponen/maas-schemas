{
  "$id": "http://maasglobal.com/core/booking-option.json",
  "description": "MaaS single TSP adapter option",
  "oneOf": [
    {
      "$ref": "#/definitions/contentWithCost"
    },
    {
      "$ref": "#/definitions/contentWithConfigurator"
    }
  ],
  "definitions": {
    "contentWithCost": {
      "type": "object",
      "required": ["leg", "meta", "terms", "tspProduct", "cost"],
      "properties": {
        "leg": {
          "$ref": "#/definitions/leg"
        },
        "terms": {
          "$ref": "booking.json#/definitions/terms"
        },
        "meta": {
          "$ref": "booking.json#/definitions/meta"
        },
        "tspProduct": {
          "$ref": "#/definitions/tspProduct"
        },
        "cost": {
          "$ref": "components/cost.json"
        },
        "customer": {
          "$ref": "#/definitions/customer"
        }
      }
    },
    "contentWithConfigurator": {
      "type": "object",
      "required": ["leg", "meta", "terms", "tspProduct", "configurator"],
      "properties": {
        "leg": {
          "$ref": "#/definitions/leg"
        },
        "terms": {
          "$ref": "booking.json#/definitions/terms"
        },
        "meta": {
          "$ref": "booking.json#/definitions/meta"
        },
        "tspProduct": {
          "$ref": "#/definitions/tspProduct"
        },
        "configurator": {
          "$ref": "components/configurator.json"
        },
        "customer": {
          "$ref": "#/definitions/customer"
        }
      }
    },
    "customer": {
      "description": "MaaS booking customer",
      "$ref": "customer.json"
    },
    "leg": {
      "type": "object",
      "description": "A subset of the standard leg (../core/leg.json)",
      "properties": {
        "mode": {
          "$ref": "components/travel-mode.json"
        },
        "startTime": {
          "$ref": "components/units.json#/definitions/time"
        },
        "endTime": {
          "$ref": "components/units.json#/definitions/time"
        },
        "from": {
          "description": "Starting location's lat and lon pair of this request",
          "$ref": "components/units-geo.json#/definitions/place"
        },
        "to": {
          "$ref": "components/units-geo.json#/definitions/place"
        },
        "departureDelay": {
          "$ref": "components/units.json#/definitions/duration"
        },
        "agencyId": {
          "$ref": "components/common.json#/definitions/agencyId"
        }
      },
      "additionalProperties": false,
      "required": ["mode", "startTime", "endTime", "from", "to"]
    },
    "legDelta": {
      "type": "object",
      "description": "A leg delta, containing any subset of the valid properties",
      "properties": {
        "mode": {
          "$ref": "components/travel-mode.json"
        },
        "startTime": {
          "$ref": "components/units.json#/definitions/time"
        },
        "endTime": {
          "$ref": "components/units.json#/definitions/time"
        },
        "departureDelay": {
          "$ref": "components/units.json#/definitions/duration"
        },
        "from": {
          "$ref": "components/units-geo.json#/definitions/place"
        },
        "to": {
          "$ref": "components/units-geo.json#/definitions/place"
        }
      },
      "additionalProperties": false
    },
    "tspProduct": {
      "description": "Defines what kind of TSP product the booking option represents.",
      "type": "object",
      "properties": {
        "id": {
          "description": "Unique identifier for the product",
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        }
      },
      "required": ["id"],
      "additionalProperties": false
    }
  }
}
