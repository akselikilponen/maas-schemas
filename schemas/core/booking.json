{
  "$id": "http://maasglobal.com/core/booking.json#",
  "type": "object",
  "description": "The base booking object with all fields, to be inherited",
  "properties": {
    "id": {
      "$ref": "/core/components/units.json#/definitions/uuid"
    },
    "tspId": {
      "$ref": "#/definitions/tspId"
    },
    "state": {
      "$ref": "/core/components/state.json#/definitions/bookingState"
    },
    "fares": {
      "type": "array",
      "items": {
        "$ref": "/core/components/fare.json"
      }
    },
    "cost": {
      "$ref": "/core/components/cost.json"
    },
    "leg": {
      "$ref": "#/definitions/leg"
    },
    "token": {
      "$ref": "#/definitions/token"
    },
    "meta": {
      "$ref": "#/definitions/meta"
    },
    "terms": {
      "$ref": "#/definitions/terms"
    },
    "customer": {
      "description": "MaaS booking customer",
      "allOf": [
        {
          "$ref": "/core/customer.json"
        },
        {
          "required": ["identityId"]
        }
      ]
    },
    "product": {
      "$ref": "/core/product.json"
    },
    "signature": {
      "$ref": "/core/components/common.json#/definitions/signature"
    },
    "configurator": {
      "$ref": "/core/components/configurator.json"
    },
    "customerSelection": {
      "$ref": "/core/components/configurator.json#/definitions/customerSelection"
    }
  },
  "required": ["id", "state", "leg", "meta", "terms", "token", "customer"],
  "definitions": {
    "tspId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "leg": {
      "type": "object",
      "description": "MaaS response may return any subset of legCore",
      "properties": {
        "signature": {
          "$ref": "/core/components/common.json#/definitions/signature"
        },
        "from": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/from"
        },
        "to": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/to"
        },
        "startTime": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/startTime"
        },
        "endTime": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/endTime"
        },
        "mode": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/mode"
        },
        "departureDelay": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/departureDelay"
        },
        "arrivalDelay": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/arrivalDelay"
        },
        "distance": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/distance"
        },
        "state": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/state"
        },
        "route": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/route"
        },
        "routeShortName": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/routeShortName"
        },
        "routeLongName": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/routeLongName"
        },
        "agencyId": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/agencyId"
        },
        "legGeometry": {
          "$ref": "/core/leg.json#/definitions/legCore/properties/legGeometry"
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "description": "TSP/mode-specific additional information. The TSP adapter should set MODE_{mode} with defined data, otherwise 'meta' can be used freely.",
      "properties": {
        "MODE_WALK": { "$ref": "/core/modes/MODE_WALK.json" },
        "MODE_BICYCLE": { "$ref": "/core/modes/MODE_BICYCLE.json" },
        "MODE_CAR": { "$ref": "/core/modes/MODE_CAR.json" },
        "MODE_TRAM": { "$ref": "/core/modes/MODE_TRAM.json" },
        "MODE_SUBWAY": { "$ref": "/core/modes/MODE_SUBWAY.json" },
        "MODE_RAIL": { "$ref": "/core/modes/MODE_RAIL.json" },
        "MODE_BUS": { "$ref": "/core/modes/MODE_BUS.json" },
        "MODE_FERRY": { "$ref": "/core/modes/MODE_FERRY.json" },
        "MODE_CABLE_CAR": { "$ref": "/core/modes/MODE_CABLE_CAR.json" },
        "MODE_GONDOLA": { "$ref": "/core/modes/MODE_GONDOLA.json" },
        "MODE_FUNICULAR": { "$ref": "/core/modes/MODE_FUNICULAR.json" },
        "MODE_SHARED_BICYCLE": { "$ref": "/core/modes/MODE_SHARED_BICYCLE.json" },
        "MODE_SHARED_CAR": { "$ref": "/core/modes/MODE_SHARED_CAR.json" },
        "MODE_TRANSIT": { "$ref": "/core/modes/MODE_TRANSIT.json" },
        "MODE_TRAIN": { "$ref": "/core/modes/MODE_TRAIN.json" },
        "MODE_TRAINISH": { "$ref": "/core/modes/MODE_TRAINISH.json" },
        "MODE_BUSISH": { "$ref": "/core/modes/MODE_BUSISH.json" },
        "MODE_TAXI": { "$ref": "/core/modes/MODE_TAXI.json" }
      }
    },
    "terms": {
      "$ref": "/core/components/terms.json"
    },
    "token": {
      "description": "The validity token (such as booking ID, travel ticket etc.) that MaaS clients will display to validate the trip when starting the leg.",
      "type": "object",
      "properties": {
        "validityDuration": {
          "description": "The rules that MaaS will interpret to schedule, re-validate or cancel the booking.",
          "type": "object",
          "properties": {
            "startTime": {
              "description": "The starting time from which the ticket is valid",
              "$ref": "/core/components/units.json#/definitions/time"
            },
            "endTime": {
              "description": "The finishing time the ticket is valid for",
              "$ref": "/core/components/units.json#/definitions/time"
            }
          }
        },
        "data": {
          "description": "Arbitrary ticket data for the client",
          "type": "object"
        },
        "meta": {
          "description": "Arbitrary metadata the TSP may pass along the ticket to the client (e.g. a booking code, base64 encoded binary)",
          "type": "object"
        }
      }
    }
  }
}
