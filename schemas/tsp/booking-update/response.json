{
  "$id": "http://maasglobal.com/tsp/bookings-update/response.json",
  "description": "Response schema for updating state of a specific booking with a TSP ID from a TSP adapter",
  "type": "object",
  "properties": {
    "tspId": {
      "$ref": "/schemas/core/booking.json#/definitions/tspId"
    },
    "cost": {
      "$ref": "/schemas/core/booking.json#/properties/cost"
    },
    "state": {
      "enum": ["RESERVED", "CONFIRMED", "ACTIVATED", "ON_HOLD", "EXPIRED", "CANCELLED"]
    },
    "leg": {
      "$ref": "/schemas/core/booking-option.json#/definitions/legDelta"
    },
    "meta": {
      "$ref": "/schemas/core/booking.json#/definitions/meta"
    },
    "terms": {
      "$ref": "/schemas/core/booking.json#/definitions/terms"
    },
    "token": {
      "$ref": "/schemas/core/booking.json#/definitions/token"
    },
    "tspProduct": {
      "$ref": "/schemas/core/booking-option.json#/definitions/tspProduct"
    }
  },
  "required": ["tspId", "state"],
  "additionalProperties": false
}
